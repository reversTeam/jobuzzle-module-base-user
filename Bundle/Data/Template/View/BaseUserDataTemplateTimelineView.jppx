class BaseUserDataTemplateTimelineView extends DataDataTemplateTimelineView {

	initialize : function () {
		_super();
		this._idElement = BaseUserDataTemplateTimelineView.elem_number++;
	}

	public initialState : function () {
		var state = _super();

		state.show = false;

		return state;
	}

	getUrl : function () {
		var router = serviceLocator.get('Router');
		var entity = this.state['entity'];

		if (!entity || entity['getUrl']() == undefined)
			return null;

		return router.build('/student/view',{
			'student_url' : entity['getUrl']()
		});
	}

	public display : function () {
		var self = this;
		var router = serviceLocator.get('Router');
		var entity = this.state['entity'];
		var picture = '';

		if (entity['getPicture']() != undefined)
			picture = entity['getPicture']();
		var style = { backgroundImage : "url('"+ picture +"')" };

		return (
			<div className="user-display-timeline show" style={style} data-url={this.getUrl()} onClick={this.link}>
				<div className="user-bottom-info">
					{ entity.getFirstname() || entity.getLastname()
						? <span className="username">{entity.getFirstname() +' '+ entity.getLastname()}</span>
						: <span className="username"></span>
					}
				</div>
			</div>
		);
	}

}